<CardsFirstLevelScreen>:

    MDFloatLayout:

        MDTopAppBar:
            title: 'Basic Card'
            elevation: 2
            pos_hint: {'top': True}
            left_action_items: [['arrow-left', lambda x: None]]
            right_action_items: [['dots-vertical', lambda x: None]]

        Image:
            source: 'assets/card-basic-lvl.jpg'
            size_hint: (0.5, 0.5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        MDLabel:
            text: 'Language:'
            halign: "right"
            size_hint: 0.4, 0.07
            pos_hint: {'center': (.25, .5)}

        Spinner:
            id: lang
            size_hint: 0.4, 0.07
            pos_hint: {'center': (.75, .5)}
            text: 'langs'
            values: root.load_langs()

        MDFillRoundFlatButton:
            text: 'Generate Deck'
            font_size: 20
            pos_hint: {'center_x': 0.5, 'center_y': 0.05}
            size_hint: .9, .05
            on_release: root.gen_basic_cards()
